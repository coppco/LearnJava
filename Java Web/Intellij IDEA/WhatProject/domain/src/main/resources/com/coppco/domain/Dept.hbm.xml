<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.coppco.domain">
    <class name="Dept" table="DEPT_p">
        <id name="id" column="DEPT_ID">
            <generator class="uuid"/>
        </id>
        <property name="deptName" column="DEPT_NAME"></property>
        <property name="state" column="STATE"></property>

        <!-- 一对多, 多表配置 -->
        <many-to-one name="parent" column="PARENT_ID" class="Dept"></many-to-one>

        <!-- 一对多 一表配置-->
        <set name="users" inverse="true" cascade="all">
            <key column="DEPT_ID"></key>
            <one-to-many class="User" />
        </set>
    </class>
</hibernate-mapping>