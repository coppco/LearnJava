package com.github.coppco;

public class Demo4_syn {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		//Í¬²½´úÂë¿é
		Thread t1 = new Thread() {
			public void run() {
				for (int i = 0; i < 40; i++) {
					System.out.println(i + "a");
				}	
			};
		};
		Thread t2 = new Thread() {
			public void run() {

				for (int i = 0; i < 40; i++) {
					System.out.println(i + "b");
				}

			};
		};
		
		synchronized (t1) {
			t1.start();
			
		}
		t2.start();
		
		
	}

}
