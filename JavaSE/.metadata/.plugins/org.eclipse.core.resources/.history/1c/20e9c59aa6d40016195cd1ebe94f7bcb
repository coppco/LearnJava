package com.github.coppco;

public class Demo4_Syn {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		final Object o = new Object();
		Thread t1 = new Thread() {
			@Override
			public void run() {
				
					for (int i = 0; i < 20; i++) {
						System.out.println(i + "a");
					}
				
			}
		};
		Thread t2 = new Thread() {
			@Override
			public void run() {
				synchronized (o) {
					for (int i = 0; i < 20; i++) {
						System.out.println(i + "b");
					}
					
				}
			}
		};

			t1.start();

			t2.start();
		
		
	}

}
