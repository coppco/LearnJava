package com.github.coppco;

public class Demo4_syn {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		//Í¬²½´úÂë¿é
		Thread t1 = new Thread() {
			public void run() {
	
					Printer.p1();

			}
		};
		Thread t2 = new Thread() {
			public void run() {
					Printer.p2();

			}
		};
		
		t1.start();
		t2.start();
		
		
	}

}

class Printer {
	static void p1() {
		synchronized (Printer.class) {
			for (int i = 0; i < 10; i++) {
				System.out.println(i + "a");
			}	
		}
	}
	static void p2() {
		synchronized (Printer.class) {
			for (int i = 0; i < 10; i++) {
				System.out.println(i + "b");
			}
		}
	}
}
