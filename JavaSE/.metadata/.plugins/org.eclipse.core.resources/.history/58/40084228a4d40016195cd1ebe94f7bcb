package com.github.coppco;

public class Demo4_syn {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		//Í¬²½´úÂë¿é
		Thread t1 = new Thread() {
			public void run() {
				synchronized (this) {
					Printer.p1();
				}
			}
		};
		Thread t2 = new Thread() {
			public void run() {
				synchronized (this) {
					Printer.p2();
				}
			}
		};
		
		t1.start();
		t2.start();
		
		
	}

}

class Printer {
	static void p1() {
		for (int i = 0; i < 10; i++) {
			System.out.println(i + "a");
		}
	}
	static void p2() {
		for (int i = 0; i < 10; i++) {
			System.out.println(i + "b");
		}
	}
}
