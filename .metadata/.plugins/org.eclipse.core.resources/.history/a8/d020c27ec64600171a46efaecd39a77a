package com.github.coppco;

public class Demo1 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//µÝ¹éÇónµÄ½×³Ë
		
		int a = getValue(0);
		System.out.println(a);
	}

	private static int getValue(int i) {
		if (i <= 1) {
			return 1;
		} else {
			return i * getValue(i - 1);
		}
	}

}
